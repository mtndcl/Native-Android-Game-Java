<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#EBEBEB"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mockingbird.magiccolors.Main2Activity"
    android:verticalScrollbarPosition="left"
    tools:ignore="ExtraText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:scrollbars="none"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalScrollbarPosition="left"
        tools:ignore="ObsoleteLayoutParam,ScrollViewSize,UselessParent"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="199dp"
            app:srcCompat="@drawable/icon"
            android:id="@+id/mainpic"
            android:visibility="visible"
            android:layout_marginBottom="50dp"

            tools:ignore="ContentDescription,InefficientWeight"
            android:layout_marginTop="150dp"
            android:layout_weight="0.38" />

        <TextView
            android:text="Play"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/play"
            android:gravity="center"

            android:fontFamily="sans-serif"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:verticalScrollbarPosition="left"
            tools:ignore="HardcodedText"
            android:lineSpacingExtra="14sp"
            android:textColor="?android:attr/textColorHintInverse"
            android:onClick="click"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="How to play"
            android:clickable="true"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/howtoplay"
            android:fontFamily="sans-serif"
            android:textSize="50sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:verticalScrollbarPosition="left"
            tools:ignore="HardcodedText"
            android:lineSpacingExtra="14sp"
            android:textColor="?android:attr/textColorHintInverse"
            android:onClick="viewit"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="Language"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"

            android:id="@+id/langu"
            android:fontFamily="sans-serif"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:verticalScrollbarPosition="left"
            tools:ignore="HardcodedText"
            android:lineSpacingExtra="14sp"
            android:textColor="?android:attr/textColorHintInverse"
            android:onClick="langu"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.01" />

        <TextView
            android:text="Share"
            android:clickable="true"
            android:layout_width="match_parent"
            android:gravity="center"

            android:layout_height="100dp"
            android:id="@+id/share"
            android:fontFamily="sans-serif"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:verticalScrollbarPosition="left"
            tools:ignore="HardcodedText"
            android:lineSpacingExtra="14sp"
            android:onClick="shareitis"
            android:textColor="?android:attr/textColorHintInverse" />
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-9155579869436948/9015418516"
            android:layout_marginTop="50dp">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
    </ScrollView>
    >
</RelativeLayout>
