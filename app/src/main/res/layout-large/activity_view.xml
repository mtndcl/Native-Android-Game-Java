<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mockingbird.magiccolors.View">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:scrollbars="none"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf"
            android:weightSum="1">

            <TextView
                android:text="HOW CAN I PLAY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/howcanÄ±play"
                tools:ignore="HardcodedText"
                android:textSize="36sp"
                android:gravity="center"

                android:fontFamily="sans-serif"
                android:typeface="monospace"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="?android:attr/colorBackgroundCacheHint" />

            <TextView
                android:text="GAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gametext"
                android:fontFamily="sans-serif"
                android:typeface="monospace"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:gravity="center"

                tools:ignore="HardcodedText"
                android:layout_marginTop="10dp"
                android:textColor="?android:attr/colorBackgroundCacheHint" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/differ"
                android:id="@+id/gameimage"
                tools:ignore="ContentDescription"
                android:layout_marginTop="10dp"
                android:layout_weight="0.54" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gametextview"
                android:gravity="center"

                tools:ignore="HardcodedText,InefficientWeight"
                android:layout_weight="5.18"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="Combo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"


                android:id="@+id/combotext"
                tools:ignore="HardcodedText"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:typeface="monospace"
                android:layout_marginTop="10dp"
                android:textColor="?android:attr/colorBackgroundCacheHint" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/same"
                android:id="@+id/comboimage"
                tools:ignore="ContentDescription"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:id="@+id/combotextview"
                tools:ignore="HardcodedText"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="BONUS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:id="@+id/bonustext"
                tools:ignore="HardcodedText"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:typeface="monospace"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="?android:attr/colorBackgroundCacheHint" />


            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bonustextview"
                android:fontFamily="sans-serif"
                android:gravity="center"

                android:typeface="monospace"
                android:textAlignment="center"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
